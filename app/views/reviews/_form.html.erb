<div id="wrapper">

<%= form_for([@project, @review]) do |f| %>
	<div id="user_stars"></div>
	<p>↓　コメントを記載してください。※必須項目です。</p>
	<%= f.text_field :comment, :class => "validate", :placeholder => "評価コメント" %>
	

	<%= f.hidden_field :project_id, :value => @project.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
	
</div>

<script>
	$('#user_stars').raty({
		path: '/images',
		scoreName: 'review[star]',
		score: 1
	});
</script>